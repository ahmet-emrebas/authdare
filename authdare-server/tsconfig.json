{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@authdare/common": [
        "src/common"
      ],
      "@authdare/common/*": [
        "src/common/*"
      ],
      "@authdare/core": [
        "src/core"
      ],
      "@authdare/core/*": [
        "src/core/*"
      ],
    }
  }
}