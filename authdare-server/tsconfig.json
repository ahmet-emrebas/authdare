{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@authdare/base": [
        "libs/base/src"
      ],
      "@authdare/base/*": [
        "libs/base/src/*"
      ],
      "@authdare/models": [
        "libs/models/src"
      ],
      "@authdare/models/*": [
        "libs/models/src/*"
      ],
      "@authdare/resources": [
        "libs/resources/src"
      ],
      "@authdare/resources/*": [
        "libs/resources/src/*"
      ]
    }
  }
}