{
  "name": "authdare-server",
  "version": "0.0.1",
  "description": "Authdare Api",
  "author": "Ahmet Emrebas",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "node dist/apps/authdare-server/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/authdare-server/main.js -- ",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --watch --config  ./apps/authdare-server/test/jest-e2e.json",
    "doc": "compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-socket.io": "^8.0.4",
    "@nestjs/schedule": "^1.0.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.0.8",
    "@nestjs/throttler": "^2.0.0",
    "@nestjs/typeorm": "^8.0.1",
    "@nestjs/websockets": "^8.0.4",
    "bcrypt": "^5.0.1",
    "chalk": "^4.1.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "mysql2": "^2.2.5",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "serve-favicon": "^2.5.0",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.14",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chalk": "^2.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@authdare/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@authdare/models(|/.*)$": "<rootDir>/libs/models/src/$1",
      "^@authdare/base(|/.*)$": "<rootDir>/libs/base/src/$1",
      "^@authdare/resources(|/.*)$": "<rootDir>/libs/resources/src/$1",
      "^@authdare/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@authdare/abstracts(|/.*)$": "<rootDir>/libs/abstracts/src/$1",
      "^@authdare/interceptors(|/.*)$": "<rootDir>/libs/interceptors/src/$1",
      "^@authdare/decorators(|/.*)$": "<rootDir>/libs/decorators/src/$1",
      "^@authdare/guards(|/.*)$": "<rootDir>/libs/guards/src/$1"
    }
  }
}