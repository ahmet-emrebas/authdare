<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/phone_background"
            android:clickable="false"
            android:clipChildren="true">

            <Button
                android:id="@+id/button_increment"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/btn_increment"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/button_decrement"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/counter_value" />

            <Button
                android:id="@+id/button_decrement"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/btn_decrement"
                app:layout_constraintBottom_toTopOf="@+id/button_reset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_increment" />

            <Button
                android:id="@+id/button_reset"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/btn_reset"
                app:backgroundTint="#FF5722"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_decrement" />

            <TextView
                android:id="@+id/counter_value"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/counter_value"
                android:textColor="#FDFCFC"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/button_increment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>